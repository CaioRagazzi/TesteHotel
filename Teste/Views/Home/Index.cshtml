@{
    ViewData["Title"] = "Home Page";
}

@model Teste.Models.Busca;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
    <title>Create</title>
</head>
<body>

    @using (Html.BeginForm("GetHotels", "Home", FormMethod.Post))
    {
        <div class="col-xs-4">
            <div class="col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Cities)
                    @Html.DropDownListFor(m => m.Cities, ViewBag.Cidades as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.QtdNights)
                    @Html.TextBoxFor(m => m.QtdNights, new { @class = "form-control", required = "required", @type = "number", @min = "1", @max = "31" })
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.QtdAdults)
                    @Html.TextBoxFor(m => m.QtdAdults, new { @class = "form-control", required = "required", @type = "number", @min = "1", @max = "31" })
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.QtdRooms)
                    @Html.TextBoxFor(m => m.QtdRooms, new { @class = "form-control", required = "required", @type = "number", @min = "1", @max = "31" })
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.ChildAge)
                    @Html.TextBoxFor(m => m.ChildAge, new { @class = "form-control", @type = "number", @min = "1", @max = "31" })
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.DateCheckIn)
                    @Html.TextBoxFor(m => m.DateCheckIn, new { @class = "form-control datepicker", required = "required", @type = "date" })
                </div>
            </div>

            <input type="submit" value="Buscar" class="btn btn-secondary btn-group-justified" />
        </div>

    }
    
    <h1>teste</h1>

</body>
</html>